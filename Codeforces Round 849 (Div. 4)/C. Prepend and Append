#include <bits/stdc++.h>
// C
using namespace std;
void solve(){
    int n;
    string s;
    cin>>n>>s;
    while(s[0]!=s[n-1]){
        s = s.substr(1,n-2);
        n -= 2;
    }
    cout<<s.size()<<endl;
}
 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
 
    int t=-1;
    cin>>t;
    while(t--) solve();
}
